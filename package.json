{
  "scripts": {
    "setup-client": "cd client && npm i && cd ..",
    "setup-server": "cd server && npm i && cd ..",
    "setup": "npm run setup-client && npm run setup-server",
    "start-client": "cd client && npm run dev && cd ..",
    "start-server": "cd server && node index.js && cd ..",
    "dev": "concurrently 'npm run start-client' 'npm run start-server'"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
